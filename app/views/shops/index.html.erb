<div class="min-h-screen bg-slate-50">
  <div class="max-w-5xl mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-4">
      <h1 class="text-2xl font-bold">登録店舗一覧</h1>

      <% if user_signed_in? %>
        <%= link_to "店舗を登録する",
              new_shop_path,
              class: "inline-flex items-center rounded-full bg-black px-4 py-2 text-xs font-semibold text-white hover:bg-slate-800" %>
      <% end %>
    </div>

    <% if @shops.any? %>
      <div class="grid gap-4 md:grid-cols-2">
        <% @shops.each do |shop| %>
          <%= link_to shop_path(shop),
                class: "block bg-white rounded-xl shadow-sm p-4 hover:shadow-md transition" do %>
            <p class="text-sm font-semibold mb-1"><%= shop.name %></p>
            <p class="text-xs text-slate-500 mb-1">
              <%= [shop.prefecture, shop.city].compact.join %>
            </p>
            <p class="text-xs text-slate-500">
              <%= shop.address %>
            </p>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-slate-500">まだ登録されている店舗はありません。</p>
    <% end %>
  </div>
  <div class="mt-6 flex justify-center">
    <%= paginate @shops %>
  </div>
</div>