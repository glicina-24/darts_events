<div class="max-w-6xl mx-auto px-4 py-8">
  <%= search_form_for @q, url: events_path, method: :get, class: "mb-6" do |f| %>
    <div class="bg-white border border-slate-200 rounded-2xl p-4 sm:p-5 shadow-sm">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
        <div>
          <%= f.label :title_cont, "イベント名", class: "text-xs font-semibold text-slate-600" %>
          <%= f.search_field :title_cont,
                placeholder: "例：ハウストーナメント",
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>

        <div>
          <%= f.label :shop_name_cont, "店舗名", class: "text-xs font-semibold text-slate-600" %>
          <%= f.search_field :shop_name_cont,
                placeholder: "例：Darts Bar ○○",
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>

        <div>
          <%= f.label :shop_prefecture_eq, "都道府県", class: "text-xs font-semibold text-slate-600" %>
          <%= f.search_field :shop_prefecture_eq,
                placeholder: "例：宮崎県",
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>

        <div>
          <%= f.label :start_datetime_gteq, "開催日（開始）", class: "text-xs font-semibold text-slate-600" %>
          <%= f.date_field :start_datetime_gteq,
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>

        <div>
          <%= f.label :start_datetime_lteq, "開催日（終了）", class: "text-xs font-semibold text-slate-600" %>
          <%= f.date_field :start_datetime_lteq,
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>

        <div>
          <%= f.label :pro_players_id_eq, "参加プロ", class: "text-xs font-semibold text-slate-600" %>
          <%= f.select :pro_players_id_eq,
                options_from_collection_for_select(@pros, :id, :name, @q.pro_players_id_eq),
                { include_blank: "選択なし" },
                class: "mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 text-sm bg-white focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
        </div>
      </div>

      <div class="mt-4 flex flex-wrap gap-2">
        <%= f.submit "検索", class: "rounded-lg bg-black px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
        <%= link_to "クリア", events_path, class: "rounded-lg border border-slate-300 px-4 py-2 text-sm font-semibold text-slate-700 hover:bg-slate-50" %>
      </div>
    </div>
  <% end %>

  <div class="flex items-end justify-between mb-6 mt-8">
    <h1 class="text-2xl font-bold">イベント一覧</h1>
    <p class="text-xs text-slate-500"><%= @events.total_count %>件</p>
  </div>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @events.each do |event| %>
      <%= render "events/card", event: event %>
    <% end %>
  </div>

  <div class="mt-8 flex justify-center">
    <%= paginate @events, params: @pagination_params %>
  </div>
</div>