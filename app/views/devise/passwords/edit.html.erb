<div class="min-h-screen flex flex-col bg-slate-100">
  <header class="w-full bg-white border-b">
    <div class="max-w-5xl mx-auto h-16 px-4 flex items-center justify-between">
      <%= link_to root_path, class: "flex items-center gap-2" do %>
        <span class="text-m font-semibold tracking-wide">Darts Events</span>
      <% end %>

      <% if user_signed_in? %>
        <%= link_to "マイページ", root_path,
              class: "inline-flex items-center rounded-full border border-slate-300 px-4 py-1.5 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
      <% else %>
        <div class="flex items-center gap-2 text-xs">
          <%= link_to "新規登録",
                new_user_registration_path,
                class: "inline-flex items-center rounded-full border border-slate-300 px-4 py-1.5 font-semibold text-slate-700 hover:bg-slate-50" %>
        </div>
      <% end %>
    </div>
  </header>

  <main class="flex-1">
    <div class="max-w-3xl mx-auto px-4 py-10">
      <h1 class="text-center text-3xl font-bold mb-2">パスワード再設定</h1>
      <p class="text-center text-slate-500 mb-8">
        新しいパスワードを入力してください
      </p>

      <div class="bg-white rounded-2xl shadow-md p-6 sm:p-8 max-w-md mx-auto">
        <h2 class="text-lg font-semibold mb-1">新しいパスワード</h2>
        <p class="text-sm text-slate-500 mb-6">
          セキュリティのため、他サービスと同じパスワードは避けてください。
        </p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="space-y-4">
            <div>
              <%= f.label :password, "新しいパスワード", class: "block text-sm font-medium text-slate-700 mb-1" %>
              <% if @minimum_password_length %>
                <p class="text-xs text-slate-500 mb-2">※ <%= @minimum_password_length %>文字以上</p>
              <% end %>
              <%= f.password_field :password,
                    autofocus: true,
                    autocomplete: "new-password",
                    placeholder: "新しいパスワード",
                    class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
            </div>

            <div>
              <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "block text-sm font-medium text-slate-700 mb-1" %>
              <%= f.password_field :password_confirmation,
                    autocomplete: "new-password",
                    placeholder: "新しいパスワード（確認）",
                    class: "block w-full rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500" %>
            </div>

            <div class="pt-2">
              <%= f.submit "パスワードを更新する",
                    class: "w-full inline-flex justify-center items-center rounded-md bg-black px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800 focus:outline-none focus:ring-2 focus:ring-slate-500 focus:ring-offset-2" %>
            </div>
          </div>
        <% end %>

        <div class="mt-6 text-center text-sm text-slate-600 space-y-1">
          <p>
            ログイン画面に戻る →
            <%= link_to "ログイン", new_user_session_path,
                  class: "text-sky-600 font-semibold hover:underline" %>
          </p>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-white border-t">
    <div class="max-w-6xl mx-auto px-4 py-6 text-xs sm:text-sm text-slate-600">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <span class="font-semibold tracking-wide text-slate-700">
            Darts Events
          </span>
        <% end %>  

        <nav class="flex flex-wrap gap-6">
          <%= link_to "利用規約", terms_path, class: "hover:underline hover:text-slate-800" %>
          <%= link_to "プライバシーポリシー", privacy_path, class: "hover:underline hover:text-slate-800" %>
          <%= link_to "お問い合わせ",
              "https://docs.google.com/forms/d/e/1FAIpQLSdF6YwUpjdKeqf77hfXWhVc4AUY8pCgmrFnL3NF2awASJiRrw/viewform?usp=header",
              target: "_blank",
              rel: "noopener",
              class: "hover:underline hover:text-slate-800" %>
        </nav>
      </div>

      <div class="mt-6 text-[11px] text-slate-400 text-center sm:text-left">
        &copy; <%= Time.current.year %> Darts Events. All rights reserved.
      </div>
    </div>
  </footer>
</div>
