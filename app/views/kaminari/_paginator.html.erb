<% base_params = (@pagination_params || {}).to_h %>

<nav class="inline-flex items-center gap-1 text-sm">
  <%# Prev %>
  <% if current_page.first? %>
    <span class="px-3 py-1.5 rounded-full border text-slate-400">前へ</span>
  <% else %>
    <%= link_to "前へ",
          url_for(base_params.merge(page: current_page.number - 1)),
          class: "px-3 py-1.5 rounded-full border hover:bg-slate-100" %>
  <% end %>

  <%# Pages %>
  <% paginator.each_page do |page| %>
    <% if page.display_tag? %>
      <% if page.current? %>
        <span class="px-3 py-1.5 rounded-full bg-black text-white font-semibold">
          <%= page.number %>
        </span>
      <% else %>
        <%= link_to page.number,
              url_for(base_params.merge(page: page.number)),
              class: "px-3 py-1.5 rounded-full border hover:bg-slate-100" %>
      <% end %>
    <% elsif !page.was_truncated? %>
      <span class="px-2 text-slate-400">…</span>
    <% end %>
  <% end %>

  <%# Next %>
  <% if current_page.last? %>
    <span class="px-3 py-1.5 rounded-full border text-slate-400">次へ</span>
  <% else %>
    <%= link_to "次へ",
          url_for(base_params.merge(page: current_page.number + 1)),
          class: "px-3 py-1.5 rounded-full border hover:bg-slate-100" %>
  <% end %>
</nav>